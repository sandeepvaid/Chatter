<li id="comment-<%=comment._id%>">
    <p>
        <% if(locals.user){%>
            
            <% if(comment.user.id == locals.user.id ||  post.user.id == locals.user.id){%>
                <small>
                    <a class="delete-comment-button" href="/comment/destroy/<%= comment.id%>"><i class="fas fa-times-circle"></i></a>
                </small>
            <%}%>
           
        <%}%>
        
        <%= comment.content%>
        <br>
        <small>
            <span>Commented by</span>
            <%= comment.user.name%>
        </small>

        <small>

            <%if(locals.user){%>
                <%let obj = comment.likes.find(o =>{%>
                    <%return o.user.toString() == user._id%>
                <%})%>
             
                <% if(obj){%>
                    <a class="toggle-like-button red" data-likes="<%= comment.likes.length%>" href="/likes/toggle/?id=<%= comment._id%>&type=Comment">
                        <i class="fas fa-lg fa-thumbs-up">
                            <%= comment.likes.length%>
                        </i>
                    </a>
                <%}else{%>
                    <a class="toggle-like-button red" data-likes="<%= comment.likes.length%>" href="/likes/toggle/?id=<%= comment._id%>&type=Comment">
                        <i class="far fa-lg fa-thumbs-up">
                            <%= comment.likes.length%>
                        </i>
                    </a>
                <%}%>    
            <%}else{%>
                <i class="far fa-lg fa-thumbs-up">
                    <%= comment.likes.length%>
                </i>
            <%}%>
        </small>
    </p>    
</li>




