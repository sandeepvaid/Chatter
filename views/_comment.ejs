<li id="comment-<%=comment._id%>">
    <p>
        <% if(locals.user){%>
            
            <% if(comment.user.id == locals.user.id ||  post.user.id == locals.user.id){%>
                <small>
                    <a class="delete-comment-button" href="/comment/destroy/<%= comment.id%>">X</a>
                </small>
            <%}%>
           
        <%}%>
        
        <%= comment.content%>
        <br>
        <small>
            <span>Commented by</span>
            <%= comment.user.name%>
        </small>
    </p>    
</li>